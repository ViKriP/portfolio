= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "general-form"}) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-group.mb-30
    = f.label :first_name, I18n.t('your_name'), class: "control-label input-label"
    = f.text_field :first_name, autofocus: true, placeholder: I18n.t('your_name'), id: "first_name", class: "form-control"
  .form-group.mb-30
    = f.label :last_name, I18n.t('your_last_name'), class: "control-label input-label"
    = f.text_field :last_name, autofocus: true, placeholder: I18n.t('your_last_name'), id: "last_name", class: "form-control"
  .form-group.mb-30
    = f.label :email, I18n.t('enter_email'), class: "control-label input-label"
    = f.email_field :email, autofocus: true, placeholder: I18n.t('enter_email'), id: "email", class: "form-control"
  .form-group.mb-30
    = f.label :password, class: "control-label input-label"
    = f.password_field :password, placeholder: I18n.t('password'), id: "password", class: "form-control"
  .form-group.mb-30
    = f.label :password_confirmation, I18n.t('confirm_password'), class: "control-label input-label"
    = f.password_field :password_confirmation, placeholder: I18n.t('confirm_password'), id: "confirm", class: "form-control"
  .text-center
    = f.submit I18n.t('signup'), class: "btn btn-default mb-20"
