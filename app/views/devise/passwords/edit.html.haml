%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= I18n.t('set_new_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "general-form" }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group.mb-30
      = f.label :password, I18n.t('type_new_password'), class: "control-label input-label"
      = f.password_field :password, placeholder: I18n.t('type_new_password'), id: "password", class: "form-control"
    .form-group.mb-40
      = f.label :password_confirmation, I18n.t('confirm_password'), class: "control-label input-label"
      = f.password_field :password_confirmation, placeholder: I18n.t('confirm_password'), id: "confirmPassword", class: "form-control"
    = f.button I18n.t('change'), class: "btn btn-default center-block mb-20"