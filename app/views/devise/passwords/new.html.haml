%main.container.general-main-wrap
  .text-center
    %h1.mb-30= I18n.t('forgot_password')
    %p.general-password-text= I18n.t('we_send_email_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "general-form" }) do |f|
    = devise_error_messages!
    .form-group.mb-25
      = f.email_field :email, autofocus: true, placeholder: I18n.t('enter_email'), id: "email", class: "form-control"
    = f.button I18n.t('email_instuctions'), class: "btn btn-default center-block mb-20"
    .text-center
      = link_to :back, class: "in-gold-500 mb-20" do
        = t('cancel')
